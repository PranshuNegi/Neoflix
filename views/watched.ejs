<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/stars.css">
</head>

<body>
<%- include('includes/nav.ejs') %>

<main>
    <div class="grid">
        <% for(var i=0; i < itlist.length; i++) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">
                        <%=itlist[i].title%>
                    </h1>
                </header>
                <div class="card__image">
                    <img src = "<%=itlist[i].image%>" alt= "<%=itlist[i].title%>" height="200px">
                </div>
                <div class="card_content">
                    <h3 class="product__description">
                        Date of Release: <%=itlist[i].date_of_release%>
                    </h3>
                    <h3 class="product__description">
                        IMDB Rating: <%=itlist[i].rating%>
                    </h3>
                    <h3 class="product__description">
                        Duration: <%=itlist[i].duration%>
                    </h3>
                    <h3 class="product__description">
                        Genre: <%=itlist[i].genre%>
                    </h3>
                </div>
                <div class="card__actions">
                <form action="/watched" method="post">
                    <button class="btn" type="submit">
                    More Details
                    </button>
                    <input type="hidden" name="b_type" value="md">
                    <input type="hidden" name="movie" value="<%= itlist[i].id %>">
                </form>
                </div>
                <div class="card__actions">
                    <h3 class="product__description">
                        Your Rating: <%=itlist[i].user_rating%>
                    </h3>
                <div>
                <div class="card__actions">
                    <h3 class="product__description">
                        Edit Rating: 
                    </h3>
                <div class="card__actions">
                    <form action="/watched" method="post">
                        <button class="btn" type="submit">5</button>
                        <input type="hidden" name="b_type" value="star5">
                        <input type="hidden" name="movie" value="<%= itlist[i].id %>">
                    </form>
                </div>
                <div class="card__actions">
                    <form action="/watched" method="post">
                        <button class="btn" type="submit">4</button>
                        <input type="hidden" name="b_type" value="star4">
                        <input type="hidden" name="movie" value="<%= itlist[i].id %>">
                    </form>
                </div>
                <div class="card__actions">
                    <form action="/watched" method="post">
                        <button class="btn" type="submit">3</button>
                        <input type="hidden" name="b_type" value="star3">
                        <input type="hidden" name="movie" value="<%= itlist[i].id %>">
                    </form>
                </div>
                <div class="card__actions">
                    <form action="/watched" method="post">
                        <button class="btn" type="submit">2</button>
                        <input type="hidden" name="b_type" value="star2">
                        <input type="hidden" name="movie" value="<%= itlist[i].id %>">
                    </form>
                </div>
                <div class="card__actions">
                    <form action="/watched" method="post">
                        <button class="btn" type="submit">1</button>
                        <input type="hidden" name="b_type" value="star1">
                        <input type="hidden" name="movie" value="<%= itlist[i].id %>">
                    </form>
                </div>
                </div>
                
                <div class="card__actions">
                <form action="/watched" method="post">
                    <button class="btn" type="submit">
                    Delete Rating
                    </button>
                    <input type="hidden" name="b_type" value="unstar">
                    <input type="hidden" name="movie" value="<%= itlist[i].id %>">
                </form>
                </div>

            </article>
         <% } %>
    </div>
</main>
<%- include('includes/end.ejs') %>