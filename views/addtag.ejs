<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('includes/navg.ejs') %>

<main>
    <center><h2>Add a new Tag</h2></center>
    <form class="product-form" action="http://localhost:3000/addtag" method="POST">
        <div class="form-control">
            <% if(status == 404 && bt == "add") {%>
                <p style="color:red;font-size:15px" >*Couldn't add tag "<%=tn%>". Try Again.</p>
            <% } else if(status == 1 && bt== "add") { %>
                <p style="color:green;font-size:15px" >Successfully added tag "<%=tn%>".</p>
            <% } %>
            <p style="color:red;font-size:15px" >**Tag Id should be unique.</p>
            <label for="id">Tag ID</label>
            <input type="text" name="id" id="id" value="">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="<% if (editing && bt=="add") { %><%= tn %><% } %>">
        </div>
            <input type="hidden" name="b_type" value="add">
        <button class="btn" type="submit">Add Tag</button>
    </form>
    <center><h2>Delete an existing Tag</h2></center>
    <form class="product-form" action="http://localhost:3000/addtag" method="POST">
        <div class="form-control">
            <% if(status == 404 && bt=="del") {%>
                <p style="color:red;font-size:15px" >*No tag with tagId "<%=tid%>" exists. Try deleting a different tag.</p>
            <% } else if(status == 1 && bt=="del") { %>
                <p style="color:green;font-size:15px" >Successfully deleted tag with tagId "<%=tid%>".</p>
            <% } %>
            <label for="id">Tag ID</label>
            <input type="text" name="id" id="id" value="">
            <input type="hidden" name="b_type" value="del">
        <button class="btn" type="submit">Delete Tag</button>
    </form>
</main>
<%- include('includes/end.ejs') %>