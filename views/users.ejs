<main>
    <form action="/users" method="post">
        <input type="text" id="search" placeholder="Search for users.." name="search" title="Type in a name">
            <button class="btn" type="submit">
                Search  
            </button>
            <input type="hidden" name="b_type" value="sch">
        </form>
