<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('includes/navg.ejs') %>

<main>
    <center><h2>Add a new genre</h2></center>
    <form class="product-form" action="http://localhost:3000/addgenre" method="POST">
        <div class="form-control">
            <% if(status == 404 && bt == "add") {%>
                <p style="color:red;font-size:15px" >*Genre already present. Try adding a different genre.</p>
            <% } else if(status == 1 && bt == "add") { %>
                <p style="color:green;font-size:15px" >Successfully added genre "<%=gn%>".</p>
            <% } %>
            <label for="genre">Genre</label>
            <input type="genre" name="genre" id="genre" value="">
            <input type="hidden" name="b_type" value="add">
        <button class="btn" type="submit">Add Genre</button>
    </div>
    </form>
    <center><h2>Delete an existing genre</h2></center>
    <form class="product-form" action="http://localhost:3000/addgenre" method="POST">
        <div class="form-control">
            <% if(status == 404 && bt=="del") {%>
                <p style="color:red;font-size:15px" >*Genre "<%=gn%>" not present. Try deleting a different genre.</p>
            <% } else if(status == 1 && bt=="del") { %>
                <p style="color:green;font-size:15px" >Successfully deleted genre "<%=gn%>".</p>
            <% } %>
            <label for="genre">Genre</label>
            <input type="genre" name="genre" id="genre" value="">
            <input type="hidden" name="b_type" value="del">
        <button class="btn" type="submit">Delete Genre</button>
    </div>
    </form>
</main>
<%- include('includes/end.ejs') %>